@model Hospital_Management.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
<div class="container mainbody">
    <div class="container-fluid text-center h-custom mt-5">
        <h3 class="fw-bold ml-5 ">Login</h3>
        <div class="row d-flex justify-content-center align-items-center h-100">
            
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 mt-5">
                <form asp-action="Login" method="post" >

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="email" asp-for="Email" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Email Id" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div data-mdb-input-init class="form-outline mb-3">
                        <input type="password" asp-for="Password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">

                        <a href="#!" class="text-body">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">

                        <div class="form-group">
                            <input type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                   style="padding-left: 2.5rem; padding-right: 2.5rem;" value="Login" />
                        </div>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a href="/Account/Register" class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
    
   
