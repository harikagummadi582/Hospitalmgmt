@model Hospital_Management.Models.DoctorSpecialty

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Add Specialization</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group my-3">
                    <label asp-for="DoctorID" class="control-label my-2"></label>
                    <select asp-for="DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
                </div>
                <div class="form-group my-3">
                    <label asp-for="SpecialtyID" class="control-label my-2"></label>
                    <select asp-for="SpecialtyID" class="form-control" asp-items="ViewBag.SpecialtyID"></select>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary w-25">Add Specialization</button>
                    <a asp-action="Index" class="btn btn-danger w-25">Back </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
