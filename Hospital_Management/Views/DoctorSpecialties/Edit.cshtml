@model Hospital_Management.Models.DoctorSpecialty

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Edit Specialization</h2>
            <form asp-action="Edit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DoctorSpecialtyID" />
                <div class="form-group">
                    <label asp-for="DoctorID" class="control-label my-3"></label>
                    <div class="text-center">
                        <select asp-for="DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
                    </div>
                    
                    <span asp-validation-for="DoctorID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpecialtyID" class="control-label my-3"></label>
                    <div class=="text-center">
                        <select asp-for="SpecialtyID" class="form-control" asp-items="ViewBag.SpecialtyID"></select>
                    </div>
                    
                    <span asp-validation-for="SpecialtyID" class="text-danger"></span>
                </div>
                <div class="form-group text-center my-2">
                    <input type="submit" value="Save" class="btn w-25 btn-primary" />
                    <a asp-action="Index" class="btn btn-danger my-2 w-25">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
