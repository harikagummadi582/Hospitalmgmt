@model Hospital_Management.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Create Appointment</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group my-2" hidden>
                <label asp-for="PatientID" class="control-label"></label>
                <select asp-for="PatientID" class ="form-control" asp-items="ViewBag.PatientID"></select>
            </div>
            <div class="form-group my-3">
                <labe >Name</labe>
                <input class="form-control" type="text" value="@ViewBag.UserName" disabled />
            </div>
          
            <div class="form-group my-3">
                <label asp-for="DoctorID" class="control-label">Doctor Name</label>
                <select asp-for="DoctorID" class ="form-control" asp-items="ViewBag.DoctorID"></select>
            </div>
            <div class="form-group my-3">
                <label asp-for="AppointmentDate" class="control-label"></label>
                <input asp-for="AppointmentDate" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="AppointmentTime" class="control-label"></label>
                <input asp-for="AppointmentTime" class="form-control" />
                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
            </div>
            @* <div class="form-group" hidden>
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" value = "Registered" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div> 
             <div class="form-group" hidden>
                <label asp-for="CancellationReason" class="control-label"></label>
                <input asp-for="CancellationReason" value=" " class="form-control" />
                <span asp-validation-for="CancellationReason" class="text-danger"></span>
            </div>*@ 
            <div class="form-group my-3">
                <label asp-for="PatientHealthIssues" class="control-label"></label>
                <input asp-for="PatientHealthIssues" class="form-control" />
                <span asp-validation-for="PatientHealthIssues" class="text-danger"></span>
            </div>
            <div class="form-group text-center my-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-danger" asp-action="Index">Back</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
