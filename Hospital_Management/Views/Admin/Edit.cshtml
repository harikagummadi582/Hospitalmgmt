@model Hospital_Management.Models.User

@{
    ViewData["Title"] = "Edit";
}


<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit User</p>

                            <form class="mx-1 mx-md-4" asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="UserID" />
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <input type="text" asp-for="Username" id="form3Example1c" placeholder="Name" class="form-control" />

                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <input type="email" asp-for="Email" id="form3Example3c" placeholder="Email" class="form-control" />

                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <input type="hidden" asp-for="Password" />
                                @*<div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                <input type="password" asp-for="Password" placeholder="Retype Password" id="form3Example4cd" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                </div>*@

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fa-solid fa-phone fa-lg me-3 fa-fw"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <input type="number" asp-for="PhoneNumber" placeholder="Phone" id="form3Example4cd" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fa-regular fa-square-caret-down fa-lg me-3 fa-fw"></i>
                                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                                        <select asp-for="UserType" class="form-control">
                                            <option></option>
                                            <option>Admin</option>
                                            <option>Doctor</option>
                                            <option>Patient</option>
                                        </select>

                                        <span asp-validation-for="UserType" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">

                                    <input type="submit" data-mdb-button-init data-mdb-ripple-init value="Edit" class="btn w-50 btn-primary btn-lg" />
                                    <a asp-action="Index" class="btn btn-danger btn-lg mx-2 w-50">Back</a>
                                </div>

                            </form>

                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                 class="img-fluid" alt="Sample image">

                        </div>

                        <div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
