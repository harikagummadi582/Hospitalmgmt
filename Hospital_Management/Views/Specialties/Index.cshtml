@model IEnumerable<Hospital_Management.Models.Specialty>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h2>Specialization</h2>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Add Specialization</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr class="text-center">
            <th>Speciality ID</th>
            <th>Specialization</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.SpecialtyID</td>
                <td>@obj.SpecialtyName</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Specialties" asp-action="Edit" asp-route-id="@obj.SpecialtyID" class="btn btn-primary mx-2">
                            <i class="bi bi-pen-fill"></i>Edit
                        </a>

                        <button type="button" class="btn btn-danger mx-2" onclick="ConfirmationAlert('@Url.Action("Delete", "Specialties", new { id = obj.SpecialtyID })')">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
